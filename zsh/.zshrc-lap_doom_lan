# ------------------------------------------------------------------------------
# Oh-my-zsh Custom Setup/Config for: lap.doom.lan
# ------------------------------------------------------------------------------

ZSH_THEME="miloshadzic"


# ------------------------------------------------------------------------------
# Aliases
# ------------------------------------------------------------------------------

alias dev='autossh -M 0 brandon@dev.doom.lan'

dev-aka() {
    autossh -M 0 brandon@dev.doom.lan -t '. ~/.zshrc; zsh -i `tmx aka`'
}

dev-at() {
    autossh -M 0 brandon@dev.doom.lan -t '. ~/.zshrc; zsh -i `tmx apptrends`'
}
